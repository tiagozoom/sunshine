<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:orientation="horizontal"
        android:padding="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header: Day, Date -->
            <TextView
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/forecast_detail_day_textview"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:minWidth="120dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/forecast_detail_date_textview"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20sp"
                android:textColor="@color/light_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/forecast_detail_high_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="4dp"
                android:textColor="@color/black"
                android:textSize="96sp" />

            <TextView
                android:id="@+id/forecast_detail_low_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="4dp"
                android:textColor="@color/light_grey"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/forecast_detail_humidity_textview"
                android:fontFamily="sans-serif-condensed"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/forecast_detail_wind_textview"
                android:fontFamily="sans-serif-condensed"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/forecast_detail_pressure_textview"
                android:fontFamily="sans-serif-condensed"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/forecast_detail_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/forecast_detail_forecast_textview"
                android:fontFamily="sans-serif-condensed"
                android:textSize="22sp"
                android:textColor="@color/light_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>