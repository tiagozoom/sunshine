    <!-- App global display name-->
    <string name="app_name">Sunshine</string>

    <!-- Menu Strings -->
    <string name="action_refresh">Refresh</string>
    <string name="settings">Settings</string>
    <string name="title_activity_settings">Settings</string>


    <!-- Definition of settings preference array of entries and values -->
    <string-array name="pref_units_entries">
        <item>Metric</item>
        <item>Imperial</item>
    </string-array>
    <string-array name="pref_units_entries_values">
        <item>metric</item>
        <item>imperial</item>
    </string-array>
    <string name="pref_units_default_value">metric</string>

    <!-- Definition of settings preference titles -->
    <string name="pref_units_title">Weather measure unit</string>
